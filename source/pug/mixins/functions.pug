mixin pageHeader(tituloTema, srcImagen, pagina)

    .curso-portada
        .row.align-items-center
            .col-12.col-lg-6
                h3#curso-titulo-componente.curso-subtitulo Técnico en Patronaje Industrial de Prendas de Vestir
                h1#curso-titulo-tema.curso-titulo Escalado digital
                .brand-line-primary
                if pagina == 'main'

                    .keywords
                        span.badge.badge-pill.badge-light.mr-2 #escalado
                        span.badge.badge-pill.badge-light.mr-2 #proporciones
                        span.badge.badge-pill.badge-light.mr-2 #incrementos 

                    .barra-dots.mt-5
                        img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')
                else 
                    p.curso-descripcion Al finalizar todo el proceso de patronaje hasta el punto de prototipado, se hace el proceso de escalado, el escalado se hace después de la verificación y validación de los moldes que se quieren trabajar, El escalado se puede trabajar de manera digital o manual, en cualquiera de los dos casos siempre se debe tener como punto de partida el cuadro de tallas o la construcción para poder hacer el análisis detallado de las prendas, cada empresa, marca o industria trabaja medidas, análisis y cuadros de tallas diferentes.
                if pagina == 'home'
                    a.curso-btn-iniciar.btn.btn-danger(href="main.html")
                        span Iniciar curso
            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    //img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr

mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'folder'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'references'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else if numero == 'glosary'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
